{
  "manifest_version": 2,
  "name": "Just play - 为你连接豆瓣电影和Netflix",
  "short_name": "Just play",
  "version": "2.0",
  "icons": { 
    "16": "img/logo@1x.png",
    "24": "img/logo@1.5x.png",
    "32": "img/logo@2x.png",
    "48": "img/logo@3x.png",
    "128": "img/logo@8x.png"},

  "background": {
    "scripts":["background.js", "doubanLoginStat.js","subtitleParser.js"]
  },

  "browser_action": {
    "default_title": "Just play",
    "default_popup": "browserAction.html"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["netflixBrowseContent.js", "inject.js", "netflixWatchContent.js", "doubanSearch.js", "mutationObservers.js", "netflixSubtitle.js"],
      "css": ["netflixBrowseContent.css"]
    }
  ],
  
  "permissions": ["activeTab", "tabs",
    "https://movie.douban.com/*", 
    "https://*.netflix.com/*",
    "https://api.douban.com/v2/movie*"],

    "web_accessible_resources": [
      "img/doubanLogo16x16.png",
      "img/doubanLogo48x48.png"
    ]
}